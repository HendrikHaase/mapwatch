{
  "name": "@mapwatch/electron",
  "version": "1.0.0",
  "description": "Automatically time your Path of Exile map clears. Electron version.",
  "main": "main.js",
  "private": true,
  "scripts": {
    "prepare": "(cd ../www && yarn build) && (cd ../lib && yarn build)",
    "build:linux": "electron-builder --linux --x64 --publish=never",
    "build:win": "electron-builder --win --x64 --publish=never",
    "build:mac": "electron-builder --mac --publish=never",
    "build:all": "concurrently 'yarn build:linux' 'yarn build:win' 'yarn build:mac'",
    "build": "yarn build:linux     # TODO build:all",
    "dev": "yarn start --dev",
    "start": "electron .",
    "start-dist": "./dist/Mapwatch-*-linux.AppImage",
    "test": "yarn start --healthcheck",
    "test-dist": "yarn start-dist --healthcheck",
    "clean": "rimraf ./dist *.log"
  },
  "build": {
    "appId": "org.erosson.mapwatch",
    "productName": "Mapwatch",
    "artifactName": "${productName}-${version}-${os}.${ext}",
    "files": [
      "node_modules/",
      "main.js",
      "index.html",
      "electron-ports.js",
      "package.json"
    ],
    "linux": {
      "executableName": "mapwatch",
      "category": "Utility"
    },
    "appImage": {
      "systemIntegration": "doNotAsk"
    },
    "publish": [
      {
        "owner": "mapwatch",
        "repo": "mapwatch",
        "provider": "github"
      }
    ],
    "directories": {
      "output": "dist/"
    }
  },
  "repository": "https://github.com/mapwatch/mapwatch",
  "author": "Evan Rosson",
  "license": "GPL-3.0",
  "dependencies": {
    "@mapwatch/lib": "1.0.0",
    "@mapwatch/www": "1.0.0",
    "chokidar": "^2.0.4",
    "electron-log": "^2.2.16",
    "electron-updater": "^2.23.3",
    "lodash": "^4.17.10",
    "minimist": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.5.1",
    "electron": "^2.0.0",
    "electron-builder": "^20.14.7",
    "rimraf": "^2.6.2"
  }
}
