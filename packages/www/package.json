{
  "name": "@mapwatch/www",
  "version": "1.0.0",
  "main": "dist/elm.js",
  "license": "GPL-3.0",
  "private": true,
  "scripts": {
    "prepare": "elm-package install --yes",
    "_build:assets": "mkdir -p dist && rsync -auv --quiet assets/ dist/",
    "//_build:elm": "not sure why rebuilding elm.js alone doesn't trigger livereload, but touching index.html is an easy workaround",
    "_build:elm": "elm-make src/Main.elm --output=dist/elm.js && touch dist/index.html",
    "_build:dev": "mkdir -p ./.dev && rsync -auv --delete ./dist/ ./.dev/ && sed 's/default-src/default-src ws:/' ./dist/index.html > ./.dev/index.html",
    "dev": "scripty",
    "start": "yarn build && serve ./dist",
    "build": "rm -rf dist && yarn run _build:assets && yarn run _build:elm"
  },
  "dependencies": {
    "@mapwatch/lib": "1.0.0"
  },
  "devDependencies": {
    "budo": "^11.2.2",
    "chokidar-cli": "^1.2.0",
    "concurrently": "^3.5.1",
    "elm": "^0.18.0",
    "scripty": "^1.7.2"
  }
}
